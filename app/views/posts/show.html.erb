<%= link_to 'Back to feed', shares_path, class: 'btn btn-default'%>

<div class="row">
  <div class="col-md-12">
    <h1>
      <%= @post.title %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= image_tag @post.image, class: 'img-post' %>
    <%= raw @post.content %>
  </div>
</div>
